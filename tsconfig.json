// tsconfig.json

{
    "compilerOptions" : {
        "module" : "commonjs",
        "esModuleInterop" : true,
        "pretty" : true,
        "allowSyntheticDefaultImports" : true,
        "target" : "es6",
        "noImplicitAny" : true,
        "moduleResolution" : "node",
        "sourceMap" : true,
        "outDir" : "dist",
        "baseUrl" : "./src",
    },
    "include" : [
        "src/**/*.ts"
    ],
    "exclude" : [
        "node_modules"
    ]
}
